{
	"private": true,

	"engines": {
		"node": ">=5.4.0",
		"npm": "^3.0.0"
	},

	"scripts": {
		"build": "better-npm-run build",
		"deploy": "better-npm-run deploy",
		"pack": "better-npm-run build && better-npm-run deploy",
		"watch": "better-npm-run watch --debug=true",
		"serve": "better-npm-run serve --debug=true",
		"test": "better-npm-run deploy --dest=public --debug=true --compile=css_minify,js_minify",
		"lint": "eslint ."
	},

	"betterScripts": {
		"build": {
			"command": "gulp clean && gulp styles:pre && gulp js:pre && gulp libs:build && gulp build",
			"env": {
				"DEBUG": "app:*",
				"NODE_ENV": "development"
			}
		},
		"deploy": {
			"command": "gulp clean && gulp styles:pre && gulp js:pre && gulp libs:build && gulp build",
			"env": {
				"DEBUG": "app:*",
				"NODE_ENV": "production"
			}
		},
		"watch": {
			"command": "npm run build && gulp watch",
			"env": {
				"DEBUG": "app:*",
				"NODE_ENV": "development"
			}
		},
		"serve": {
			"command": "npm run build && gulp serve",
			"env": {
				"DEBUG": "app:*",
				"NODE_ENV": "development",
				"SERVE_MODE": true
			}
		},
		"test": {
			"command": "gulp libs:build --debug=true",
			"env": {
				"DEBUG": "app:*",
				"NODE_ENV": "production"
			}
		}
	},

