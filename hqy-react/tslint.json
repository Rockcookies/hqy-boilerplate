{
	"extends": [
		"tslint:recommended",
		"tslint-react",
		"tslint-config-prettier"
	],
	"linterOptions": {
		"exclude": [
			"config/**/*.js",
			"node_modules/**/*.ts"
		]
	},
	"rules": {
		"indent": [1, "tab"],
		"trailing-comma": [true, { "multiline": "never", "singleline": "never" }],
		"ordered-imports": [false],
		"max-line-length": [true, 300],
		"ban-types": [false],
		"no-empty": [false],
		"prefer-conditional-expression": [false],
		"no-var-requires": [false],
		"no-console": [false]
	}
}
